        ]
      }
    },
    {
      "username": "user@demo.celox.io",
      "email": "user@demo.celox.io",
      "firstName": "User",
      "lastName": "Demo",
      "enabled": true,
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
