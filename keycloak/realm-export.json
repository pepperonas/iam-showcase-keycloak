  "eventsEnabled": true,
  "eventsListeners": [
    "jboss-logging",
    "celox-audit-listener"
  ],
  "enabledEventTypes": [
    "LOGIN",
    "LOGIN_ERROR",
    "LOGOUT",
    "LOGOUT_ERROR",
